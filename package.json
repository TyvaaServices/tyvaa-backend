        "@fastify/jwt": "^9.1.0",
        "@fastify/multipart": "^9.0.3",
        "@fastify/rate-limit": "^10.3.0",
        "@fastify/swagger": "^9.5.1",
        "@fastify/swagger-ui": "^5.2.3",
        "@genkit-ai/googleai": "^1.13.0",
        "@jest/globals": "^30.0.2",
        "@upstash/redis": "^1.35.0",
        "amqplib": "^0.10.4",
        "axios": "^1.10.0",
        "dotenv": "^16.5.0",
        "fastify": "^5.4.0",
        "fastify-plugin": "^5.0.1",
        "firebase-admin": "^13.4.0",
        "genkit": "^1.13.0",
        "node-cron": "^4.1.1",
        "nodemailer": "^7.0.3",
        "pg": "^8.16.2",
        "pg-hstore": "^2.3.4",
        "pino": "^9.7.0",
        "pino-pretty": "^13.0.0",
        "pump": "^3.0.3",
        "sanitize-filename": "^1.6.3",
        "sequelize": "^6.37.7",
        "twilio": "^5.7.1",
        "zod": "^3.25.67",
        "zod-to-json-schema": "^3.24.6",
        "ioredis": "^5.6.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.29.0",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-promise": "^7.2.1",
        "globals": "^16.2.0",
        "jest": "^30.0.3",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.1"
    }
