        "#payment-modules/*": "./src/payment-modules/*",
        "#chatbotRoutes": "./src/chatbot-modules/routes/*"
    },
    "dependencies": {
        "@fastify/compress": "^8.0.3",
        "@fastify/cors": "^11.0.1",
        "@fastify/helmet": "^13.0.1",
