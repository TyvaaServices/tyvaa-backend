{
    "name": "tyvaa-backend",
    "version": "1.0.0",
    "description": "backend service for Tyvaa",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "test": "node --experimental-vm-modules node_modules/.bin/jest ",
        "seed:all": "node seeders/seedAll.js",
        "seed:role": "node seeders/rbacSeeder.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{js,json,md}\""
    },
    "type": "module",
    "imports": {
        "#utils/*": "./src/utils/*",
        "#config/*": "./src/config/*",
        "#broker/*": "./src/broker/*",
